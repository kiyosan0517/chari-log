<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
    <%= javascript_include_tag 'application' %>

    <meta charset="utf-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/css/lightbox.css" rel="stylesheet">

    <%= display_meta_tags(default_meta_tags) %>
  </head>

  <body>
    <% if logged_in? %>
      <%= javascript_include_tag "sidebar-toggle.js" %>
      <div class="site-wrapper">
        <div class="container-fluid bg-light p-0">
          <div class="row m-0">
            <!-- ヘッダー -->
            <div class="header-wrapper sticky-top shadow-sm bg-white p-0">
              <%= render "/shared/header" %>
            </div>

            <!-- サイドバー -->
            <div class="sidebar-wrapper col-xl-2 col-lg-2 bg-white z-2">
              <%= render "/shared/sidebar" %>
            </div>

            <!-- メインコンテンツカバー画像（タブレット以下） -->
            <%= render "/shared/main_content_cover_image_mobile" %>
           
            <!-- メインコンテンツ -->
            <div class="content-wrapper col-xl-10 col-lg-10 col-md-12 bg-white px-4 px-sm-5 pt-4 z-0">
              <%= render "/shared/flash_message" %>

              <!-- メインコンテンツカバー画像（PC以上） -->
              <%= render "/shared/main_content_cover_image_pc" %>
              <%= yield %>
              <div class="mask-area overlay"></div>
            </div>

            <!-- フッターPC以上 -->
            <div class="footer-wrapper bg-light z-3 mt-4 d-sm-block d-none">
              <%= render "/shared/footer" %>
            </div>

            <!-- フッタータブレット以下 -->
            <div class="d-sm-none">
              <%= render "/shared/nav_footer" %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="header-wrapper sticky-top shadow-sm bg-white p-0">
        <%= render "/shared/header" %>
      </div>
      <div class="content-wrapper pt-4">
        <%= render "/shared/flash_message" %>
        <%= yield %>
      </div>
      <div class="before-login-footer-wrapper shadow mt-5">
        <%= render "/shared/footer" %>
      </div>
    <% end %>
    
    <script src="https://kit.fontawesome.com/36190603df.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/js/lightbox.min.js" type="text/javascript"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
  </body>
</html>
