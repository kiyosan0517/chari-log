<% set_meta_tags title: t('.title') %>

<div class="container mt-4 mb-sm-5">
  <div class="row justify-content-center pb-sm-5">
    <div class="col-xl-7 col-lg-8 col-md-10 col-12">
      <div class="title-area text-center d-lg-block d-none mt-4 mb-5">
        <h3 class="fw-bold"><%= t(".title") %></h3>
      </div>
      <div class="form-area border rounded bg-body-secondary px-4 py-5 p-sm-5">
        <h5 class='text-center fw-bold text-info pt-2 pb-4'>
          <i class="far fa-envelope"></i>
          <%= t(".require_email") %>
        </h5>
        <%= form_with url: password_resets_path, method: :post, local: true do |f| %>
          <div class="form-group mb-1 mt-4">
            <input type="text" name="email" id="email" autocomplete="on" class="form-control">
          </div>
          <div>
            ご登録されているメールアドレスに<br>
            再設定用ページへのURLを送信致します。
          </div>
          <div class="form-group mt-5">
            <%= f.submit t(".to_edit_password_reset_page"), class: 'form-control btn btn-primary mt-3' %>
          </div>
        <% end %>
      </div>
      <%= render "shared/to_page_button/" %>
    </div>
  </div>
</div>