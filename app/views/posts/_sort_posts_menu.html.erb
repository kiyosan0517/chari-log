<% sort_options = [
  { name: '新着順', order: 'new' },
  { name: '古い順', order: 'old' },
  { name: 'タイトル(降順)', order: 'title_desc' },
  { name: 'タイトル(昇順)', order: 'title_asc' },
  { name: '人気順', order: 'like_desc' }
] %>

<div class="btn-group dropdown ms-auto border">
  <button class="btn btn-lg dropdown-toggle fw-bold" style="font-size: smaller;" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    並び替え
  </button>
  <ul class="dropdown-menu dropdown-menu-end" id="dropdown_menu" aria-labelledby="dropdownMenuButton1">
    <% sort_options.each do |option| %>
      <% link_options = { class: "dropdown-item text-dark #{sort_active_class(option[:order])}", style: 'cursor: pointer;' } %>
      <li><%= link_to_sort(option[:name], current_page?(posts_path) ? posts_path(order: option[:order]) : (current_page?(likes_posts_path) ? likes_posts_path(order: option[:order]) : user_path(@user, order: option[:order])), link_options) %></li>
    <% end %>
  </ul>
</div>
