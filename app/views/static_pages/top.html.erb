<div class="container">
  <div class="row">
    <div class="offset-lg-2 col-lg-4 text-center">
      <%= image_tag "chari-log-top.png", class: "img-responsive h-100", style: "height:auto%; width:90%;" %>
    </div>
    <div class="col-lg-3 text-center">
      <div class="text-center border rounded py-5 px-4 h-100">
        <div class="text-center border-bottom">
          <%= image_tag "chari-log-logo.png", class: "img-responsive", style: "height:auto%; width:100%;" %>
        </div>
        <div class="text-center">
          <br>
          <h3 class="font-weight-bold">-MyBikeと<br/>
                        思い出を刻もう-</h3>
          <br/>
        </div>
        <div class="text-center">
          <%= form_with local: true do |f| %>
            <div class="form-group">
              <%= f.text_field :email, class: 'form-control bg-light mb-2', placeholder: 'メールアドレス' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control bg-light mb-4', placeholder: 'パスワード' %>
            </div>
            <div class="actions">
              <%= f.submit "ログイン", class: 'form-control btn btn-primary font-weight' %>
            </div>
          <% end %>
        </div>
        <div class='text-center my-4'>
          <span>───</span> または <span>───</span>
        </div>
        <div class="text-center">
          <%= link_to '新規登録', 'static_pages/top', class: "form-control btn btn-default rounded-pill font-weight-bold border text-primary mb-3" %>
        </div>
        <div class="text-center">
          <%= link_to 'パスワードをお忘れの方', class: "" %>
        </div>
      </div>
    </div>
  </div>
</div>
