<nav class="navbar navbar-expand-lg navbar-light px-4">
  <div class="container-fluid px-0">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag 'chari-log-logo.png', style: "height: 45px;" %>
    <% end %>
    <div class="user-panel d-lg-flex d-none align-items-center">
      <div class="user-avatar pe-2">
        <% if current_user.avatar.present? %>
          <%= link_to posts_path do %>
            <%= image_tag current_user.avatar.variant(gravity: :center, resize: "40x40^!", crop:"40x40+0+0"), class: "rounded-circle d-block bg-dark-subtle" %>
          <% end %>
        <% else %>
          <%= link_to posts_path do %>
            <%= image_tag 'sample.png', style: "height: 40px; width: 40px;", class: "rounded-circle d-block bg-dark-subtle" %>
          <% end %>
        <% end %>
      </div>
      <div class="user-name">
        <%= link_to current_user.name, posts_path, class: "d-block font-weight-bold text-secondary" %>
      </div>
      <div class="new-post-btn ms-4">
        <%= link_to t("defaults.post"), new_post_path, class: "btn btn-sm btn-success fw-bold px-3 py-2" %>
      </div>
    </div>
    <button class="navbar-toggler" type="button">
      <span class="fas fa-bars fa-lg"></span>
    </button>
  </div>
</nav>
